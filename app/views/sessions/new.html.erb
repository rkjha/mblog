<h1>Sign in</h1>
<%= form_for(:session, :url => sessions_path) do |f| -%>
	<div class="field">
		<%= f.label :email %> <br />
		<%= f.text_field :email %>
	</div>
	<div class="field">
		<%= f.label :password %> <br />
		<%= f.password_field :password %>
	</div>
	<div class="actions">
		<%= 	f.submit "Sign in" %>
	</div>
<% end -%>

<p> New User? <%= link_to "Sign Up Now!", signup_path %> </p>
<p>Forgot password ? <em> There is nothing we can do now, Just Relax!</em></p>
